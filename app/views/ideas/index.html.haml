%h1 Listing Ideas

= will_paginate @ideas

%table
  %tr
    %th Name
    %th Description
    %th Range
    %th Tasks
    %th Actions
  %tr
    %td{:colspan => "5"}= link_to 'New Idea', new_idea_path
  - @ideas.each do |idea|
    %tr
      %td= link_to idea.name, idea
      %td= idea.description
      %td= idea.range
      %td{:style => "width: 65px;"}= pluralize(idea.tasks.count, 'Task')
      %td
        = link_to 'Show', idea
        = link_to 'Edit', edit_idea_path(idea)
        = link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }