<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @task.name %>
</p>

<p>
  <b>Team members:</b>
  <%= @task.team_members %>
</p>

<p>
  <b>Notes:</b>
  <%= @task.notes %>
</p>
<p>
  <b>Idea:</b>
  <%= @task.idea.name %>
</p>

<p>
  <b>Completed:</b>
  <%= @task.completed %>
</p>

<p>
  <b>Due Date:</b>
  <%= l(@task.due_date, format: :long) if @task.due_date %>
</p>

