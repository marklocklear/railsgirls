<h1>Listing Tasks</h1>

<%= will_paginate @tasks %>

<table>
  <tr>
    <th>Name</th>
    <th>Team members</th>
    <th>Notes</th>
    <th>Idea</th>
    <th>Completed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tr>
    <td colspan="6"><%= link_to 'New Task', new_task_path %></td>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.team_members %></td>
    <td><%= task.notes %></td>
    <td><%= link_to task.idea.name, task.idea %></td>
    <td><%= task.completed %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Task', new_task_path %>
